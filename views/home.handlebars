<div class="container">
    
    <form class="text-center" action="/greetings/" method="get">
        <input class="pl-5 pr-5 pb-3 m-3 input" type="text" placeholder="Enter Your name">
        <div class="w-100"></div>
        <input class=" btn btn-primary mb-5" type="submit" value="Greet me">
    </form>

    <div class="row">
        <div class="col-3"></div>
         <div class="col-6 align-center">
            <a href="/greetings/link">
                <h3 class="inline text-center text-primary bg-dark display">{{message}}</h3>
            </a>
        </div>
        <div class="col-3"></div>
    </div>
    
</div>
